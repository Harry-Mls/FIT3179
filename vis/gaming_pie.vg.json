{
    "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
    "description": "A simple pie chart with embedded data.",
    "width": 300,
    "height": 300,
    "title": "Victorian Gambling Expediture Distribution",
    "data": {
        "name": "table",
        "url": "https://raw.githubusercontent.com/Harry-Mls/FIT3179/main/data/VictorianGambling.csv",
        "format": {
            "type": "csv"
        }
    },
    "layer": [
        {
            "mark": {
                "type": "image",
                "url": "https://raw.githubusercontent.com/Harry-Mls/FIT3179/main/assets/grey_chip.png",
                "width": 300,
                "height": 300
            },
            "encoding": {
                "x": {
                    "value": 150
                },
                "y": {
                    "value": 150
                }
            }
        },
        {
            "mark": {
                "type": "arc",
                "opacity": 0.8
            },
            "encoding": {
                "theta": {
                    "field": "Per Capita Expenditure ($)",
                    "type": "quantitative"
                },
                "color": {
                    "field": "Gambling Form",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "Betting",
                            "Casino",
                            "Keno",
                            "Lotteries",
                            "Pokies"
                        ],
                        "range": [
                            "#d91919",
                            "#d96f19",
                            "#d919c9",
                            "#009b00",
                            "#1939d9"
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "Gambling Form",
                        "type": "nominal",
                        "title": "Gambling Form"
                    },
                    {
                        "field": "Per Capita Expenditure ($)",
                        "type": "quantitative",
                        "format": "$,"
                    }
                ]
            }
        }
    ]
}