{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Parallel coordinate plot of EGM data using normalized values.",
  "data": {
    "url": "https://raw.githubusercontent.com/Harry-Mls/FIT3179/main/data/EGM2023-2024.csv"
  },
  "width": 550,
  "height": 200,
  "transform": [
    { "filter": "datum['LGA Name']" },
    { "window": [{ "op": "count", "as": "index" }] },
    {
      "fold": [
        "Adults per Venue 2024",
        "EGM per 1,000 Adults 2024",
        "Expenditure per Adult 2024",
        "SEIFA DIS Score "
      ]
    },
    {
      "calculate": "toNumber(datum.value)",
      "as": "value_num"
    },
    {
      "joinaggregate": [
        { "op": "min", "field": "value_num", "as": "min" },
        { "op": "max", "field": "value_num", "as": "max" }
      ],
      "groupby": ["key"]
    },
    {
      "filter": "isFinite(datum.value_num)"
    },
    {
      "calculate": "(datum.value_num - datum.min) / (datum.max - datum.min)",
      "as": "norm_val"
    },
    {
      "calculate": "(datum.min + datum.max) / 2",
      "as": "mid"
    }
  ],
  "layer": [
    {
      "mark": { "type": "rule", "color": "#ccc" },
      "encoding": {
        "detail": { "aggregate": "count" },
        "x": {
          "type": "nominal",
          "field": "key",
          "scale": {
            "domain": [
              "Adults per Venue 2024",
              "EGM per 1,000 Adults 2024",
              "Expenditure per Adult 2024",
              "SEIFA DIS Score "
            ]
          }
        }
      }
    },
    {
      "mark": "line",
      "encoding": {
        "color": {
          "type": "nominal",
          "field": "Region",
          "legend": {
            "orient": "bottom"
          }
        },
        "detail": { "type": "nominal", "field": "index" },
        "opacity": { "value": 0.3 },
        "x": {
          "type": "nominal",
          "field": "key",
          "sort": [
            "Adults per Venue 2024",
            "EGM per 1,000 Adults 2024",
            "Expenditure per Adult 2024",
            "SEIFA DIS Score "
          ],
          "scale": {
            "domain": [
              "Adults per Venue 2024",
              "EGM per 1,000 Adults 2024",
              "Expenditure per Adult 2024",
              "SEIFA DIS Score "
            ]
          }
        },
        "y": {
          "type": "quantitative",
          "field": "norm_val",
          "axis": null
        },
        "tooltip": [
          { "type": "nominal", "field": "LGA Name" },
          { "type": "quantitative", "field": "EGM per 1,000 Adults 2024" },
          { "type": "quantitative", "field": "SEIFA DIS Score " },
          { "type": "quantitative", "field": "Adults per Venue 2024" },
          { "type": "quantitative", "field": "Expenditure per Adult 2024" }
        ]
      }
    },
    {
      "encoding": {
        "x": {
          "type": "nominal",
          "field": "key",
          "scale": {
            "domain": [
              "Adults per Venue 2024",
              "EGM per 1,000 Adults 2024",
              "Expenditure per Adult 2024",
              "SEIFA DIS Score "
            ]
          }
        },

        "y": { "value": 0 }
      },

      "layer": [
        {
          "mark": { "type": "text", "style": "label" },
          "encoding": {
            "text": { "aggregate": "max", "field": "max" }
          }
        },
        {
          "mark": {
            "type": "tick",
            "style": "tick",
            "size": 8,
            "color": "#ccc"
          }
        }
      ]
    },
    {
      "encoding": {
        "x": {
          "type": "nominal",
          "field": "key",
          "scale": {
            "domain": [
              "Adults per Venue 2024",
              "EGM per 1,000 Adults 2024",
              "Expenditure per Adult 2024",
              "SEIFA DIS Score "
            ]
          }
        },
        "y": { "value": 100 }
      },
      "layer": [
        {
          "mark": { "type": "text", "style": "label" },
          "encoding": {
            "text": { "aggregate": "min", "field": "mid" }
          }
        },
        {
          "mark": {
            "type": "tick",
            "style": "tick",
            "size": 8,
            "color": "#ccc"
          }
        }
      ]
    },
    {
      "encoding": {
        "x": {
          "type": "nominal",
          "field": "key",
          "scale": {
            "domain": [
              "Adults per Venue 2024",
              "EGM per 1,000 Adults 2024",
              "Expenditure per Adult 2024",
              "SEIFA DIS Score "
            ]
          }
        },
        "y": { "value": 200 }
      },
      "layer": [
        {
          "mark": { "type": "text", "style": "label" },
          "encoding": {
            "text": { "aggregate": "min", "field": "min" }
          }
        },
        {
          "mark": {
            "type": "tick",
            "style": "tick",
            "size": 8,
            "color": "#ccc"
          }
        }
      ]
    }
  ],
  "config": {
    "axisX": {
      "domain": false,
      "labelAngle": 0,
      "tickColor": "#ccc",
      "title": null
    },
    "view": { "stroke": null },
    "style": {
      "label": { "baseline": "middle", "align": "right", "dx": -5 },
      "tick": { "orient": "horizontal" }
    }
  }
}
