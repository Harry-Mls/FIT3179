{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Parallel coordinate plot of EGM data using normalized values.",
  "title": {
    "text": "Correlation between Pokies and Socio-Economics",
    "fontSize": 22,
    "anchor": "start",
    "font": "sans-serif",
    "color": "#333"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Harry-Mls/FIT3179/main/data/EGM2023-2024.csv"
  },
  "width": 540,
  "height": 280,
  "transform": [
    { "window": [{ "op": "count", "as": "index" }] },
    {
      "fold": [
        "Adults per Venue 2024",
        "EGM per 1,000 Adults 2024",
        "Expenditure per Adult 2024",
        "SEIFA DIS Score "
      ]
    },
    {
      "calculate": "toNumber(datum.value)",
      "as": "value_num"
    },
    {
      "joinaggregate": [
        { "op": "min", "field": "value_num", "as": "min" },
        { "op": "max", "field": "value_num", "as": "max" }
      ],
      "groupby": ["key"]
    },
    {
      "calculate": "(datum.value_num - datum.min) / (datum.max - datum.min)",
      "as": "norm_val"
    },
    {
      "calculate": "(datum.min + datum.max) / 2",
      "as": "mid"
    },
    {
      "calculate": "datum.key == 'Adults per Venue 2024' ? 'Adults/Venue' : datum.key == 'EGM per 1,000 Adults 2024' ? 'EGMs/1K Adults' : datum.key == 'Expenditure per Adult 2024' ? 'Exp./Adult' : datum.key == 'SEIFA DIS Score ' ? 'SEIFA Score' : datum.key",
      "as": "key_label"
    }
  ],
  "layer": [
    {
      "mark": { "type": "rule", "color": "#ddd" },
      "encoding": {
        "detail": { "aggregate": "count" },
        "x": {
          "type": "nominal",
          "field": "key_label",
          "scale": {
            "domain": [
              "Adults/Venue",
              "EGMs/1K Adults",
              "Exp./Adult",
              "SEIFA Score"
            ]
          },
          "axis": {
            "labelFont": "sans-serif",
            "labelFontSize": 12,
            "labelAngle": 0,
            "tickColor": "#ccc",
            "domain": false,
            "title": null
          }
        }
      }
    },
    {
      "mark": "line",
      "encoding": {
        "color": {
          "type": "nominal",
          "field": "Region",
          "scale": {
            "domain": ["Metro", "Country"],
            "range": ["#214db0", "#00a768"]
          },
          "legend": {
            "orient": "top",
            "direction": "horizontal",
            "labelFont": "sans-serif",
            "labelFontSize": 12,
            "titleFont": "sans-serif",
            "titleFontSize": 13
          }
        },
        "detail": { "type": "nominal", "field": "index" },
        "opacity": { "value": 0.3 },
        "x": {
          "type": "nominal",
          "field": "key_label",
          "sort": [
            "Adults/Venue",
            "EGMs/1K Adults",
            "Exp./Adult",
            "SEIFA Score"
          ],
          "scale": {
            "domain": [
              "Adults/Venue",
              "EGMs/1K Adults",
              "Exp./Adult",
              "SEIFA Score"
            ]
          }
        },
        "y": {
          "type": "quantitative",
          "field": "norm_val",
          "axis": null
        },
        "tooltip": [
          { "type": "nominal", "field": "LGA Name" },
          { "type": "quantitative", "field": "EGM per 1,000 Adults 2024" },
          { "type": "quantitative", "field": "SEIFA DIS Score " },
          { "type": "quantitative", "field": "Adults per Venue 2024" },
          { "type": "quantitative", "field": "Expenditure per Adult 2024" }
        ]
      }
    },
    {
      "encoding": {
        "x": {
          "type": "nominal",
          "field": "key_label",
          "scale": {
            "domain": [
              "Adults/Venue",
              "EGMs/1K Adults",
              "Exp./Adult",
              "SEIFA Score"
            ]
          }
        },
        "y": { "value": 0 }
      },
      "layer": [
        {
          "mark": {
            "type": "text",
            "style": "label",
            "font": "sans-serif",
            "fontSize": 12,
            "fill": "#333"
          },
          "encoding": {
            "text": { "aggregate": "max", "field": "max" }
          }
        },
        {
          "mark": {
            "type": "tick",
            "style": "tick",
            "size": 8,
            "color": "#ccc"
          }
        }
      ]
    },
    {
      "encoding": {
        "x": {
          "type": "nominal",
          "field": "key_label",
          "scale": {
            "domain": [
              "Adults/Venue",
              "EGMs/1K Adults",
              "Exp./Adult",
              "SEIFA Score"
            ]
          }
        },
        "y": { "value": 140 }
      },
      "layer": [
        {
          "mark": {
            "type": "text",
            "style": "label",
            "font": "sans-serif",
            "fontSize": 12,
            "fill": "#333"
          },
          "encoding": {
            "text": { "aggregate": "min", "field": "mid" }
          }
        },
        {
          "mark": {
            "type": "tick",
            "style": "tick",
            "size": 8,
            "color": "#ccc"
          }
        }
      ]
    },
    {
      "encoding": {
        "x": {
          "type": "nominal",
          "field": "key_label",
          "scale": {
            "domain": [
              "Adults/Venue",
              "EGMs/1K Adults",
              "Exp./Adult",
              "SEIFA Score"
            ]
          }
        },
        "y": { "value": 280 }
      },
      "layer": [
        {
          "mark": {
            "type": "text",
            "style": "label",
            "font": "sans-serif",
            "fontSize": 12,
            "fill": "#333"
          },
          "encoding": {
            "text": { "aggregate": "min", "field": "min" }
          }
        },
        {
          "mark": {
            "type": "tick",
            "style": "tick",
            "size": 8,
            "color": "#ccc"
          }
        }
      ]
    }
  ],
  "config": {
    "axisX": {
      "domain": false,
      "labelFont": "sans-serif",
      "labelFontSize": 12,
      "labelAngle": 0,
      "tickColor": "#ccc",
      "title": null
    },
    "view": { "stroke": "transparent" },
    "style": {
      "label": {
        "baseline": "middle",
        "align": "right",
        "dx": -5,
        "font": "sans-serif",
        "fontSize": 12,
        "fill": "#333"
      },
      "tick": { "orient": "horizontal" }
    }
  }
}
